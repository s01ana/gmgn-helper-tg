{
  "compilerOptions": {
    "target": "ES2020",                          // JavaScript version to compile to
    "module": "commonjs",                     // Module system to use (CommonJS for Node.js)
    "outDir": "./dist",                       // Output directory for compiled files
    "rootDir": "./src",                       // Root directory of your TypeScript code
    "strict": true,                           // Enable strict type-checking options
    "esModuleInterop": true,
    "resolveJsonModule": true,                   // Enable interoperability between CommonJS and ES modules
  },
  "exclude": ["node_modules"]
}